<div id="videojuegos" class="align-items-center">
    <div class="col-xl-12" style="text-align: center; margin-top: 10px;">
        <h1>Videojuegos disponibles</h1>
    </div>
    <br>
    <div class="container" style="align-items: center; margin-bottom:20px;">
        <% if(!logged || rol == 'user'){%>
            <div class="row">
                <% productData.forEach(function(product) { %>
                    <div class="card col-sm-3">
                        <img class="img-fluid" src="<%= product.image %>">
                        <div class="card-body">
                            <h5 class="card-title" style="text-align: center;"> <%= product.name %></h5>
                            <div class="container" style="align-items: center;">
                                <div class="row">
                                    <p class="card-text font-weight-bold" style="width: 48%; margin-right: 5px; text-align:left;"> <%= product.price %> Є</p>
                                    <p class="card-text" style="width: 48%; text-align:right;"> Unidades: <%= product.quantity %></p>
                                </div>
                                <div class="row">
                                    <p class="card-text" style="width: 100%; text-align:left;"> Plataforma: <%= product.platform %></p>
                                </div>
                            </div>
                            <% if(logged) { %>
                                <div style="align-items: center;">
                                    <a href="/comprarUnique/<%=product.productId%>" class="btn btn-primary" style="width:48%; margin-right: 1%;">Comprar</a>
                                    <a href="/venderUnique/<%=product.productId%>" class="btn btn-success" style="width:48%;">Vender</a>
                                </div>
                            <% } %>
                            <div style="text-align: center; margin-top: 10px;">
                                <a href="/products/<%=product.productId%>" class="btn btn-secondary">Más información</a>
                            </div>
                        </div>  
                    </div>
                <% }); %>
            </div>
        <% } else {%>
            <div class="row">
                <table class="table table-border" style="table-layout: fixed; word-wrap: break-word;">
                    <tr>
                        <th scope="col" style="display:none"></th>
                        <th scope="col"> Nombre del videojuego</th>
                        <th scope="col"> Precio</th>
                        <th scope="col"> Cantidad disponible</th>
                        <th scope="col"> Plataforma</th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                    <% productData.forEach(function(product) { %>
                        <tr>
                            <th scope="row" style="display:none;"><%= product.productId%></th>
                            <td colspan="1" name="name"><%= product.name%></td>
                            <td colspan="1" name="price"><%= product.price%></td>
                            <td colspan="1" name="quantity"><%= product.quantity%></td>
                            <td colspan="1" name="platform"><%= product.platform%></td>
                            <td colspan="1" name="image">
                                <%if(product.image != null && product.image != ''){%>
                                    <img class="rounded mx-auto d-block" style="width:80%;" src="<%= product.image %>">
                                <% } %>
                            </td>
                            <td colspan="1" name="buttons">
                                <a class="btn btn-primary btn-circle modify-product" productId="<%= product.productId%>" title="Modificar datos del producto">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                        <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
                                    </svg>
                                </a>
                                <a class="btn btn-danger btn-circle delete-product" productId="<%= product.productId%>" title="Eliminar datos del producto">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                                        <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                                    </svg>
                                </a>
                            </td>
                        </tr>
                    <% }); %>
                </table>
            </div>
        <% } %>
    </div>
</div>